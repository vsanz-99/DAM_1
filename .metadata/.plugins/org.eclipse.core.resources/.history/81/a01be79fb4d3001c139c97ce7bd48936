package eva03.ejercicio02;
import java.io.File;
import java.io.IOException;

public class Ejecutable {

	public static void main(String[] args) {
		
		String nom_fichero="viajantes.txt";
		
		File fichero=new File(nom_fichero); // Toma como ruta por defecto la del workspace
		
		if (!fichero.exists()) {
			System.out.println("\tNo existe el fichero "+nom_fichero+".");
			System.out.println("\tCreando el fichero "+nom_fichero+" ...");
			try {
				if (fichero.createNewFile())
					System.out.println("\tEl fichero "+nom_fichero+ "se ha creado correctamente.");
				else
					System.out.println("\tNo se ha podido ser crear el fichero "+nom_fichero+".");
			} catch (IOException ioe) {
				ioe.printStackTrace();
			}
		} else {
			if (fichero.isFile()) 
				System.out.println("El fichero "+nom_fichero+" ya existe.");
		}
		
		Menu=new Menu(nom_fichero);

	}
	
}
