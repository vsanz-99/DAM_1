package ejercicio01;

public class Eratostenes {

	public void escribir_primos(String ruta_archivo) {

		// Criba de Eratostenes - Sieve of Eratosthenes
		// Crear una matriz booleana "primo" e inicializa toda las entradas como true
		boolean primo[];

		for (int i=0; i<500; i++) {

			primo=true;

			for (int p=2; p*p<=n; p++) {

				// Si el primo no cambia, esntonces es primo
				if (primo==true) {
					
					// Actualiza todos los multiplos de p
					for (int i=p*2; i<=n; i+=p) {
						
						primo=false;
						
					}
					
				}
				
			}
			
			try {
				
				// Escribe todos los numeros primos entre 1 y 500
				FileWriter n_primos=new FileWriter(ruta_archivo);
				
				
			} catch(IOException e) {}

		}
		
	}
	
}
