package colecciones_diccionarios;
import java.util.ArrayList;

/**
 * <p>Introducir valores aleatorios (entre 0 y 100) en un 
 * ArrayList y calcular la suma, la media, el maximo y el minimo 
 * de esos numeros. El tamannio de la lista sera aleatorio y podra 
 * oscilar entre 10 y 20 elementos (ambos inclusive).</p>
 * @since 14/05/2022
 * @version 1.0
 * @author Victor Sanz*/

public class S10Ejercicio02 {

	public static void main(String[] args) {
		
		int suma=0;
		int minimo=100;
		int maximo=0;
		int tamannio=(int)(Math.random()*11+10);
		
		ArrayList<Integer> a=new ArrayList<Integer>();
		
		for (int i=0; i<tamannio; i++) {
			a.add((int)(Math.random()*101));
		}
		
		System.out.println("\tLista generada: "+a);
		
		for (int n : a) {
			suma+=n;
			if (n<minimo) {
				minimo=n;
			}
			if (n>maximo) {
				maximo=n;
			}
		}
		
		System.out.println("\tLa suma total es: "+suma);
		System.out.println("\tLa media es: "+suma/tamannio);
		System.out.println("\tEl minimo es: "+minimo);
		System.out.println("\tEl maximo es: "+maximo);

	}

}
