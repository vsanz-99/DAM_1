package leyendo_escribiendo_bytes;
import java.io.*;

public class Lectura_Escritura {

	public static void main(String[] args) {
		
		int contador=0;
		
		try {
			
			FileInputStream archivo_lectura=new FileInputStream("C:/Users/PC/Downloads/reciente/me.jpg");
			
			boolean final_ar=false;
			
			while (!final_ar) { // Mientras sea cierto
				
				int byte_entrada=archivo_lectura.read();
				
				if (byte_entrada==-1)
					
					final_ar=true;
					
				System.out.println(byte_entrada); // Donde se almacenan los bytes que va leyendo
					
				contador++;
				
			}
			
			archivo_lectura.close();
			
		} catch(IOException e) {}
		
		System.out.println(contador);

	}

}
